# ===========================================
# Luminous Project Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# cp .env.example .env

# -------------------------------------------
# Autonomous Agent (Claude SDK + Linear)
# -------------------------------------------
# Claude OAuth token - run 'claude setup-token' to get this
CLAUDE_CODE_OAUTH_TOKEN=your-oauth-token-here

# Linear API key - from https://linear.app/YOUR-TEAM/settings/api
LINEAR_API_KEY=lin_api_xxxxxxxxxxxxx

# -------------------------------------------
# Google Gemini AI
# -------------------------------------------
# Google AI API Key - from https://aistudio.google.com/apikey
GOOGLE_API_KEY=your-google-api-key-here

# Gemini File Search Store Name (created after uploading ACCJC docs)
# This is populated after running the document indexing script
GEMINI_FILE_SEARCH_STORE_NAME=

# -------------------------------------------
# Neon Database (Serverless Postgres)
# -------------------------------------------
# Connection string from https://console.neon.tech
# Format: postgresql://user:password@host/database?sslmode=require
DATABASE_URL=postgresql://user:password@ep-xxx-xxx-123456.us-east-2.aws.neon.tech/luminous?sslmode=require

# -------------------------------------------
# Firebase Authentication
# -------------------------------------------
# Note: Firebase Admin SDK uses serviceAccountKey.json file
# Download from Firebase Console > Project Settings > Service Accounts
# Place the file at: backend/serviceAccountKey.json

# Optional: Firebase Web Config (for frontend)
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=
